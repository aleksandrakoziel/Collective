<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/add_bottom_sheet_heading"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:gravity="center"
        android:text="Add album to your list"
        android:textColor="@color/browser_actions_text_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/add_collected"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@android:color/white"
        android:drawablePadding="32dp"
        android:drawableStart="@drawable/collected"
        android:drawableTint="@color/colorAccent"
        android:gravity="start|center_vertical"
        android:text="Collected"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/add_wanted"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@android:color/white"
        android:drawablePadding="32dp"
        android:drawableStart="@drawable/wanted"
        android:drawableTint="@color/colorAccent"
        android:gravity="start|center_vertical"
        android:text="Wanted"
        android:textColor="@color/black"
        android:textSize="16sp"  />

    <TextView
        android:id="@+id/add_loved"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@android:color/white"
        android:drawablePadding="32dp"
        android:drawableStart="@drawable/loved"
        android:drawableTint="@color/colorAccent"
        android:gravity="start|center_vertical"
        android:text="Loved"
        android:textColor="@color/black"
        android:textSize="16sp"  />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="2dp"
        android:background="@color/black" />

    <TextView
        android:id="@+id/add_view_last_fm"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="@android:color/white"
        android:drawablePadding="32dp"
        android:drawableStart="@drawable/ic_lastfm_logo"
        android:drawableTint="@color/colorAccent"
        android:gravity="start|center_vertical"
        android:text="View album in Last.fm"
        android:textColor="@color/black"
        android:textSize="16sp"  />
</LinearLayout>